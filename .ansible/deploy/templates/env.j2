APP_NAME=Perpetuelles
APP_ENV=production
APP_KEY={{ app_key }}
APP_DEBUG=false
APP_URL={{ app_scheme }}://{{ app_domain_name }}

DB_DATABASE={{ mysql_secret_db_name }}
DB_USERNAME={{ mysql_secret_db_user }}
DB_PASSWORD="{{ mysql_secret_db_user_password }}"

CACHE_DRIVER=redis
SESSION_DRIVER=redis

FILESYSTEM_DRIVER=ovh-swift

OVH_SWIFT_OPENSTACK_REGION={{ app_ovh_swift_openstack_region }}
OVH_SWIFT_OPENSTACK_PROJECT_ID={{ app_ovh_swift_openstack_project_id }}
OVH_SWIFT_CONTAINER_NAME={{ app_ovh_swift_container_name }}
OVH_SWIFT_OPENSTACK_USERNAME={{ app_ovh_swift_openstack_username }}
OVH_SWIFT_OPENSTACK_PASSWORD={{ app_ovh_swift_openstack_password }}
OVH_SWIFT_PUBLIC_URL={{ app_ovh_swift_public_url }}

FFMPEG_BINARIES=/usr/bin/ffmpeg
FFPROBE_BINARIES=/usr/bin/ffprobe
