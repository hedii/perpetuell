APP_NAME=Perpetuelles
APP_ENV=production
APP_KEY={{ app_key }}
APP_DEBUG=false
APP_URL={{ app_scheme }}://{{ app_domain_name }}

DB_DATABASE={{ mysql_secret_db_name }}
DB_USERNAME={{ mysql_secret_db_user }}
DB_PASSWORD="{{ mysql_secret_db_user_password }}"

CACHE_DRIVER=redis
SESSION_DRIVER=redis

FILESYSTEM_DRIVER=s3

AWS_ACCESS_KEY_ID={{ app_ovh_s3_access_key }}
AWS_SECRET_ACCESS_KEY={{ app_ovh_s3_secret_access_key }}
AWS_DEFAULT_REGION={{ app_ovh_s3_default_region }}
AWS_BUCKET={{ app_ovh_s3_bucket }}
AWS_URL={{ app_scheme }}://storage.{{ app_domain_name }}
AWS_ENDPOINT={{ app_ovh_s3_endpoint }}

OVH_OPENSTACK_USERNAME={{ app_ovh_openstack_username }}
OVH_OPENSTACK_PASSWORD={{ app_ovh_openstack_password }}
OVH_OPENSTACK_PROJECT_ID={{ app_ovh_openstack_project_id }}
OVH_OPENSTACK_TENANT_ID={{ app_ovh_openstack_tenant_id }}
OVH_OPENSTACK_TENANT_NAME={{ app_ovh_openstack_tenant_name }}
OVH_OPENSTACK_AUTH_URL={{ app_ovh_openstack_auth_url }}
OVH_OPENSTACK_REGION={{ app_ovh_openstack_region }}
OVH_OPENSTACK_CONTAINER_NAME={{ app_ovh_openstack_container_name }}

FFMPEG_BINARIES=/usr/bin/ffmpeg
FFPROBE_BINARIES=/usr/bin/ffprobe
